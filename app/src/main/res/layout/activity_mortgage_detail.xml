<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mortgageDetailVM"
            type="com.dhenu.app.ui.mortgage.mortgagedetail.MortgageDetailViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/screen_bg"
            android:fadingEdge="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTokenNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:fontFamily="@font/app_font_bold"
                        android:singleLine="true"
                        android:text="Token Number: 1101"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size20" />


                    <TextView
                        android:id="@+id/textMortgageStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:fontFamily="@font/app_font_bold"
                        android:gravity="end"
                        android:singleLine="true"
                        android:text="वर्तमान स्थिति: Open"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size20" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutExchangeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textBusinessmanName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:background="@drawable/dr_edittext_background"
                        android:fontFamily="@font/app_font_bold"
                        android:padding="@dimen/dp_15"
                        android:focusable="false"
                        android:singleLine="true"
                        android:text="व्यापारी का नाम : AC"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size20" />


                    <TextView
                        android:id="@+id/textExchangeId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@drawable/dr_edittext_background"
                        android:fontFamily="@font/app_font_bold"
                        android:padding="@dimen/dp_15"
                        android:focusable="false"
                        android:singleLine="true"
                        android:text="थोक नंबर:: 2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size20" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/dr_edittext_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:id="@+id/textItemAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:fontFamily="@font/app_font_medium"
                            android:singleLine="true"
                            android:text="5000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size18" />

                        <TextView
                            android:id="@+id/textItemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:fontFamily="@font/app_font_medium"
                            android:singleLine="true"
                            android:text="आइटम: Kada"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size18" />

                        <TextView
                            android:id="@+id/textMortgageDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:fontFamily="@font/app_font_medium"
                            android:singleLine="true"
                            android:text="16 dec 2024 "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size18" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@drawable/dr_edittext_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:id="@+id/textWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:fontFamily="@font/app_font_medium"
                            android:singleLine="true"
                            android:text="वज़न: 220 gram"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size18" />


                        <TextView
                            android:id="@+id/textItemDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:fontFamily="@font/app_font_medium"
                            android:singleLine="true"
                            android:text="Testing here "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size18" />


                        <TextView
                            android:id="@+id/textEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:fontFamily="@font/app_font_medium"
                            android:singleLine="true"
                            android:text="4 month"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size18" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_20"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="ब्याज दर %"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:id="@+id/textInterestRate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/dr_edittext_background"
                            android:drawableEnd="@drawable/baseline_edit_24"
                            android:drawablePadding="@dimen/dp_10"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="ब्याज दर %"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="@dimen/dp_20"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_20"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="ब्याज गणना तिथि"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:id="@+id/textTodayDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/dr_edittext_background"
                            android:drawableEnd="@drawable/baseline_edit_24"
                            android:drawablePadding="@dimen/dp_10"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="तारीख"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="@dimen/dp_20"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_20"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="टोटल दिन"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:id="@+id/textTotalDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/dr_edittext_background"
                            android:focusable="false"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="टोटल दिन"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="@dimen/dp_20"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_20"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="टोटल ब्याज"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:id="@+id/textInterestAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/dr_edittext_background"
                            android:focusable="false"
                            android:fontFamily="@font/app_font_regular"
                            android:hint="टोटल ब्याज"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="@dimen/dp_20"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size16" />


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/textTotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/dr_edittext_background"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/app_font_bold"
                    android:gravity="center"
                    android:padding="@dimen/dp_20"
                    android:singleLine="true"
                    android:text="Total Amount: ₹ 24,000"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size22" />

                <TextView
                    android:id="@+id/textCloseMortgage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/dr_app_theme_btn_bg"
                    android:fontFamily="@font/app_font_bold"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="गिरवी छुड़वाना"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size18" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>