<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layoutMortgageItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/dr_edittext_background"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textTokenNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_font_medium"
                android:text="Token Number: 1001"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size18" />

            <ImageView
                android:id="@+id/imageClose"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:background="@drawable/baseline_close_24" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/app_font_regular"
            android:text="Item Name: Kada"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size18" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">


            <TextView
                android:id="@+id/textMortgageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_font_regular"
                android:text="13 oct 2024"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/app_font_bold"
                android:text="â‚¹ 50000"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size18" />

        </RelativeLayout>


    </LinearLayout>

</layout>