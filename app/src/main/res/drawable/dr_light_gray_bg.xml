<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/blueLight"
            android:endColor="@color/blueLight"
            android:startColor="@color/blueLight" />
            <corners android:radius="@dimen/dp_5" />
            <stroke
                android:width="2dp"
            android:color="@color/blueLight" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/screen_bg"
                android:endColor="@color/screen_bg"
                android:startColor="@color/screen_bg" />
            <corners android:radius="@dimen/dp_5" />
            <stroke
                android:width="1dp"
            android:color="@color/screen_bg" />
        </shape>
    </item>
</selector>
